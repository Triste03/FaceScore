/* pages/home/home.wxss */
.selectItem {
  display: flex;
  justify-content: space-around;
  position: absolute;
  bottom: 50px;
  width: 100%;
}

.selectItem cover-image {
  width: 50px;
  height: 50px;
  opacity: .7;
}

.reChoose {
  position: fixed;
  bottom: 30px;
  left: 20%;
  transform: translateX(-50%);
  box-shadow: 0px 10px 5px #666;
}

.backPhoto {
  position: fixed;
  bottom: 30px;
  right: 20%;
  transform: translateX(50%);
  box-shadow: 0px 10px 5px #666;
}

.faceInfo_box {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 200px;
  background-color: rgba(255, 255, 255, .7);
  border-radius: 5px;
  box-shadow: 0px 1px 5px #eee;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.faceInfo_item {
  display: flex;
  justify-content: space-around;
}